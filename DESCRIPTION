    dplyr,
    devtools,
    knitr,
    rmarkdown,
    testthat (>= 3.0.0)
Authors@R: person(given = c("Renzo", "Caceres"),
                  family = "Rossi",
                  role = c("aut", "cre"),
                  email = "arenzocaceresrossi@gmail.com")
